<div class="row">
  <div class="panel panel-default">
  <div class="panel-body">
    <h2 id="centered-header"> Select a studio to see open classes: </h2>
  </div>
</div>
</div>

<div class="row">
  <% @studios.each do |studio| %>
    <div class="col-lg-3 col-md-4 col-xs-6 thumb">
      <a class= "thumbnail" id="studio-index" href="studios/<%=studio.id%>?start_date=<%= Date.today %>">
          <%= image_tag studio.image, class: "img-responsive-custom"%>
      </a>
    </div>
  <% end %>
</div>

  




