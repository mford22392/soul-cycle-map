<div class="row">
  <div class="col-md-4 img-with-text">
    <h1><%= @user.name.upcase %></h1>
    <%= image_tag(@user.image, size: "140") %>
  </div>
  <div class="col-md-4">
    <h3>My upcoming classes:</h3>
    <ul>
      <% if @user.spin_classes.length > 0 %>
        <% @user.spin_classes.each do |spin_class| %>
          <li> 
            <strong> <%= spin_class.time %> </strong> | <%= spin_class.instructor.name %> 
            <%= render partial: "/studios/#{AttendClassToggle.new(spin_class, current_user).already_attending?}", locals: {spin_class: spin_class} %>
          </li>
        <% end %>
      <% else %>
        <li> You have no upcoming classes </li>
      <% end %>
    </ul>
  </div>
  <div class="col-md-4">
    <h3>My friends' upcoming classes:</h3>
    <ul>
      <li> Placeholder </li>
    </ul>
  </div>
</div>